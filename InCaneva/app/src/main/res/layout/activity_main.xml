<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo_incaneva"

        android:padding="10dp"
        android:layout_marginBottom="10dp" />



        <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imageView"

            android:src="@drawable/eventi"
            android:adjustViewBounds="false"
            android:focusable="true"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton2"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/natura"
            android:scaleType="center"
            android:layout_below="@+id/imageButton4"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"
            android:layout_marginTop="15dp" />

    <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton3"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/storia"
            android:layout_below="@+id/imageButton5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton4"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/enogastronomia"
            android:layout_alignTop="@+id/imageButton5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton5"
            android:layout_row="4"
            android:layout_column="0"
            android:src="@drawable/sport"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:id="@+id/imageButton6"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@drawable/passioni"
            android:layout_below="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />

    <!--</GridLayout>-->
</RelativeLayout>
